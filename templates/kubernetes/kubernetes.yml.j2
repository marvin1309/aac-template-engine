# Source: {{ service.name }} SSoT (service.yml)
apiVersion: v1
kind: Service
metadata:
  name: {{ service.name }}
  namespace: {{ deployments.kubernetes.namespace }}
  labels:
    app: {{ service.name }}
spec:
  type: {{ deployments.kubernetes.service_type }}
  selector:
    app: {{ service.name }}
  ports:
  {% for p in ports %}
  - name: {{ p.name }}
    port: {{ p.port }}
    targetPort: {{ p.port }}
    protocol: {{ p.protocol }}
  {% endfor %}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ service.name }}-deployment
  namespace: {{ deployments.kubernetes.namespace }}
  labels:
    app: {{ service.name }}
spec:
  replicas: {{ deployments.kubernetes.replicas }}
  selector:
    matchLabels:
      app: {{ service.name }}
  template:
    metadata:
      labels:
        app: {{ service.name }}
    spec:
      containers:
      - name: {{ service.name }}
        image: "{{ service.image_repo }}:{{ service.image_tag }}"
        ports:
        {% for p in ports %}
        - containerPort: {{ p.port }}
          name: {{ p.name }}
        {% endfor %}
        resources:
          requests:
            cpu: "{{ deployments.kubernetes.resources.requests.cpu }}"
            memory: "{{ deployments.kubernetes.resources.requests.memory }}"
          limits:
            cpu: "{{ deployments.kubernetes.resources.limits.cpu }}"
            memory: "{{ deployments.kubernetes.resources.limits.memory }}"